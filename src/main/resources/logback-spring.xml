<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- 定义彩色控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 应用程序日志文件 -->
    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>./logs/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- AOP追踪日志文件 -->
    <appender name="AOP_TRACE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/aop-trace.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [AOP-TRACE] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>./logs/aop-trace.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- AOP性能监控日志文件 -->
    <appender name="AOP_PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/aop-performance.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [AOP-PERFORMANCE] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>./logs/aop-performance.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 应用程序日志级别配置 -->
    <logger name="yuuine.xxrag" level="DEBUG"/>
    <logger name="TRACING_LOGGER" level="INFO"/>

    <!-- AOP追踪日志专用logger -->
    <logger name="TRACING_LOGGER" level="INFO" additivity="true">
        <appender-ref ref="AOP_TRACE_FILE"/>
    </logger>

    <!-- AOP性能监控日志专用logger -->
    <logger name="yuuine.xxrag.aop.PerformanceAspect" level="INFO" additivity="true">
        <appender-ref ref="AOP_PERFORMANCE_FILE"/>
    </logger>

    <!-- 根日志配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APPLICATION_FILE"/>
    </root>
</configuration>